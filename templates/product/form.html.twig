{% extends 'base.html.twig' %}

{% block body %}

    {% if product is defined %}
        <h1>Modifier un produit</h1>
    {% else %}
        <h1>Ajouter un nouveau produit</h1>
    {% endif %}

    {{ form_start(form) }}

    <div class="row">
        <div class="col-8">

                {{ form_row(form.title) }}
                {{ form_row(form.description) }}
        </div>
        <div class="col-4">
            {{ form_row(form.quantity) }}
            {{ form_row(form.price) }}
        </div>
    </div>

        {% if product is defined %}
            <button class="btn btn-warning float-right">Éditer le produit</button>
        {% else %}
            <button class="btn btn-primary float-right">Créer un produit</button>
        {% endif %}

    {{ form_end(form) }}

{% endblock %}